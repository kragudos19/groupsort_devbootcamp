<p id="notice"><%= notice %></p>

<h1>Cohorts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cohorts.each do |cohort| %>
      <tr>
        <td><%= link_to "#{cohort.name}", cohort_phases_path(cohort) %></td>
        <td><%= cohort.location %></td>
        <td><%= link_to 'Edit Name', edit_cohort_path(cohort) %></td>
        <td><%= link_to 'Edit Students', cohort_students_path(cohort) %></td>
        <td><%= link_to 'Remove Cohort', cohort, class: "delete", method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cohort', new_cohort_path, remote: true, id: "new-cohort" %>
